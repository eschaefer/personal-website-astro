---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import BaseBody from '../../components/BaseBody.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<BaseBody>
		<Header />
		<main class="flex-grow container mx-auto px-4 py-8">
			<h1 class="text-4xl font-bold text-center mb-12">Blog Posts</h1>
			<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					posts.map((post) => (
						<div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-shadow">
							<a href={`/blog/${post.id}/`} class="block">
								{post.data.heroImage && (
									<figure>
										<img class="w-full h-48 object-cover" src={post.data.heroImage} alt={`Hero image for ${post.data.title}`} />
									</figure>
								)}
								<div class="card-body">
									<h2 class="card-title">{post.data.title}</h2>
									<p class="text-base-content/70 text-sm">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.description && <p>{post.data.description}</p>}
									<div class="card-actions justify-end">
										<span class="btn btn-primary btn-sm">Read More</span>
									</div>
								</div>
							</a>
						</div>
					))
				}
			</section>
		</main>
		<Footer />
	</BaseBody>
</html>
